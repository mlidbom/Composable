<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <connectionStrings>
    <add name="MasterDB" connectionString="Data Source=localhost;Initial Catalog=master;Integrated Security=True;" />
  </connectionStrings>
  <appSettings>
    <!--<add key="Composable.System.StrictlyManagedResources.CollectStackTracesForAllStrictlyManagedResources" value="true"/>-->
  </appSettings>
  <log4net debug="false">
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="CQRS.Tests.log" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="2" />
      <maximumFileSize value="5MB" />
      <staticLogFileName value="true" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.XMLLayout" />
    </appender>
    <root>
      <level value="WARN" />
      <appender-ref ref="RollingFileAppender" />
    </root>
    <logger name="Composable">
      <level value="DEBUG" />
    </logger>
  </log4net>
  
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1" /></startup></configuration>
